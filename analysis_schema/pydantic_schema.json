{
  "title": "yt example",
  "description": "An example for a yt analysis schema using Pydantic",
  "type": "object",
  "properties": {
    "Plot": {
      "title": "Plot",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/PhasePlot"
          },
          {
            "$ref": "#/definitions/SlicePlot"
          },
          {
            "$ref": "#/definitions/ProjectionPlot"
          }
        ]
      }
    }
  },
  "required": [
    "Plot"
  ],
  "definitions": {
    "Dataset": {
      "title": "Dataset",
      "description": "The dataset model to load and that will be drawn from for other classes. Filename is the only required field. ",
      "type": "object",
      "properties": {
        "filename": {
          "title": "Filename",
          "type": "string"
        },
        "name": {
          "title": "Name",
          "default": "Data for Science",
          "type": "string"
        },
        "comments": {
          "title": "Comments",
          "type": "string"
        }
      },
      "required": [
        "filename"
      ]
    },
    "Fields": {
      "title": "Fields",
      "description": "The fields dataclasses allows uers to type in a string for a field in the dataset. Field is the only required attribute. ",
      "type": "object",
      "properties": {
        "field": {
          "title": "Field",
          "type": "string"
        },
        "comments": {
          "title": "Comments",
          "type": "string"
        }
      },
      "required": [
        "field"
      ]
    },
    "PhasePlot": {
      "title": "PhasePlot",
      "description": "The phase plot data class maps to a yt operation and parameters. ",
      "type": "object",
      "properties": {
        "Dataset": {
          "$ref": "#/definitions/Dataset"
        },
        "xField": {
          "$ref": "#/definitions/Fields"
        },
        "yField": {
          "$ref": "#/definitions/Fields"
        },
        "zField": {
          "title": "Zfield",
          "anyOf": [
            {
              "$ref": "#/definitions/Fields"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Fields"
              }
            }
          ]
        },
        "WeightedField": {
          "$ref": "#/definitions/Fields"
        },
        "xBins": {
          "title": "Xbins",
          "type": "integer"
        },
        "yBins": {
          "title": "Ybins",
          "type": "integer"
        },
        "Accumulation": {
          "title": "Accumulation",
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "array",
              "items": {
                "type": "boolean"
              }
            }
          ]
        },
        "Fractional": {
          "title": "Fractional",
          "type": "boolean"
        },
        "FigureSize": {
          "title": "Figuresize",
          "type": "integer"
        },
        "FontSize": {
          "title": "Fontsize",
          "type": "integer"
        },
        "Shading": {
          "title": "Shading",
          "type": "string"
        },
        "Comments": {
          "title": "Comments",
          "type": "string"
        }
      },
      "required": [
        "Dataset",
        "xField",
        "yField",
        "zField"
      ]
    },
    "SlicePlot": {
      "title": "SlicePlot",
      "description": "The slice plot data class maps to a yt operation and parameters. Dataset, Field and Axis are required. All other attributes will take the yt default if not specified. ",
      "type": "object",
      "properties": {
        "Dataset": {
          "$ref": "#/definitions/Dataset"
        },
        "Field": {
          "$ref": "#/definitions/Fields"
        },
        "Axis": {
          "title": "Axis",
          "type": "string"
        },
        "CenterPlot": {
          "title": "Centerplot",
          "type": "string"
        },
        "WidthPlot": {
          "title": "Widthplot",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Comments": {
          "title": "Comments",
          "type": "string"
        }
      },
      "required": [
        "Dataset",
        "Field",
        "Axis"
      ]
    },
    "ProjectionPlot": {
      "title": "ProjectionPlot",
      "description": "The projection plot data class maps to a yt operation and parameters. Dataset, Field, Axis and AxisUnit are required. All other attributes will take the yt default if not specified.\n ",
      "type": "object",
      "properties": {
        "Dataset": {
          "$ref": "#/definitions/Dataset"
        },
        "Field": {
          "$ref": "#/definitions/Fields"
        },
        "Axis": {
          "title": "Axis",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "integer"
            }
          ]
        },
        "CenterPlot": {
          "title": "Centerplot",
          "type": "string"
        },
        "WidthPlot": {
          "title": "Widthplot",
          "anyOf": [
            {
              "type": "array",
              "items": {}
            },
            {
              "type": "number"
            }
          ]
        },
        "WeightedField": {
          "$ref": "#/definitions/Fields"
        },
        "AxesUnit": {
          "title": "Axesunit",
          "type": "string"
        },
        "Origin": {
          "title": "Origin",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {}
            }
          ]
        },
        "Comments": {
          "title": "Comments",
          "type": "string"
        }
      },
      "required": [
        "Dataset",
        "Field",
        "Axis",
        "AxesUnit"
      ]
    }
  }
}